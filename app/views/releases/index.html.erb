<div class="page-header">
  <h1>All Releases</h1>
</div>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Kind</th>
    <th>Author</th>
    <th>Label</th>
    <th>Release Date</th>
    <th></th>
    <th></th>
  </tr>

<% @releases.each do |release| %>
  <tr>
    <td><%= link_to release.name, release %></td>
    <td><%= release.release_kind.name.titleize %></td>
    <td><%= link_to release.owning_artist.name, release.owning_artist %></td>
    <td><%= release.label_name %></td>
    <td><%= release.release_date_friendly %></td>
    <td><%= link_to 'Edit', edit_release_path(release) %></td>
    <td><%= link_to 'Destroy', release, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Release', new_release_path %>
